<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:weightSum="1">

    <ImageView

        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/flag"
        android:layout_weight="0.43" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Opportunities section of the Indian Academicians Database. Here we are providing you with links to various job related, learning related and grants website which might come in handy at some time. Choose your section from the drawer menu and keep learning."
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>

</LinearLayout>